<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body { padding-top:80px; }
  </style>
  <!-- JS -->
  <!-- load angular and our custom application -->
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
  <script src="/js/angularEx.js"></script>
</head>
<body>
<div class="container" ng-app="exampleApp" ng-controller="mainController as main">

  <!-- form to update the message variable using ng-model -->
  <div class="form-group">
    <label>Message</label>
    <input type="text" class="form-control" ng-model="main.message">
  </div>

  <div class="jumbotron text-center">
    <h2>Welcome!</h2>
    {{ main.message }}
  </div>

  <!-- display the list using ng-repeat -->
  <h2>This is my list:</h2>
  <table class="table table-bordered">
    <thead>
    <tr>
      <td>Name</td>
      <td>Color</td>
      <td>Nerd Level</td>
    </tr>
    </thead>
    <tbody>
    <tr ng-repeat="computer in main.computers">
      <td>{{ computer.name }}</td>
      <td>{{ computer.color }}</td>
      <td>{{ computer.nerdness }}</td>
    </tr>
    </tbody>
  </table>

  <!-- form to add computer to the list -->
  <form class="form-inline" ng-submit="main.addComputer()">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Macbook" ng-model="main.computerData.name">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Silver" ng-model="main.computerData.color">
    </div>
    <div class="form-group">
      <input type="number" class="form-control" placeholder="8" ng-model="main.computerData.nerdness">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success">Add</button>
    </div>
  </form>

</div>
</body>
</html>